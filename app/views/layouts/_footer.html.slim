footer
  .container
    .row
      article.span2
        span
          = @category.try(:firm_purpose).try(:html_safe) || Templates.firm_purpose
          span= Templates.firm_name
      article.span7
        .footer-div
          span= @category.try(:footer_text).try(:html_safe) || (content_for?(:footer_text) ? yield(:footer_text) : Templates.footer_text).html_safe
      article.span3
        .footer-div
          .store-phone= Templates.phone
